#!/usr/bin/env python3
import os
import sys
from subprocess import call, DEVNULL
from os.path import exists, isdir

from edit_helpers import run_editor


def main():
    paths = get_files_to_edit()
    for path in paths:
        validate_path(path)

    for path in paths:
        if os.getenv('INSIDE_EMACS'):
            call([
                'emacsclient',
                '-e', '(find-file-other-window "{}")'.format(path),
            ])
        else:
            call(['emacsclient', '--no-wait', path])


def get_files_to_edit():
    if len(sys.argv) == 1:
        print('Specify the file(s) to edit.')
        sys.exit(1)
    return sys.argv[1:]


def validate_path(path):
    if not exists(path):
        response = input('Path {} does not exist. Open anyway? (y/n) '
                         .format(repr(path)))
        if not response.lower().startswith('y'):
            sys.exit(1)
    if isdir(path):
        response = input('Path {} is a directory. Open anyway? (y/n) '
                         .format(repr(path)))
        if not response.lower().startswith('y'):
            sys.exit(1)


